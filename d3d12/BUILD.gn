executable("d3d12_renderer") {
  libs = [ "user32.lib", "Ole32.lib", "d3d12.lib", "dxgi.lib", "d3dcompiler.lib" ]

  deps = [":d3d12_renderer_shaders"]

  sources = [
    "clock.h",
    "clock.cpp",
    "comhelper.h",
    "d3dx12.h",
    "DXWindow.cpp",
    "DXWindow.h",
    "main.cpp",
  ]
}

copy("d3d12_renderer_shaders") {
  sources = [
    "PassThroughShaders.hlsl",
  ]

  outputs = [ "$root_out_dir/{{source_file_part}}" ]
}